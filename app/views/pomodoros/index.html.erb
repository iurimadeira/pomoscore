<p id="notice"><%= notice %></p>

<h1>Pomodoros</h1>

<h2>Total score: <%= @pomodoros.where(used_at: nil).sum(:score) %></h2>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>When</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pomodoros.each do |pomodoro| %>
      <tr>
        <td><%= pomodoro.score %></td>
        <td><%= pomodoro.created_at.strftime('%d/%m/%y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Pomodoro', pomodoros_path, method: :post %>
