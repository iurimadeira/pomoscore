<p id="notice"><%= notice %></p>

<h1>Pomodoros</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Used at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pomodoros.each do |pomodoro| %>
      <tr>
        <td><%= pomodoro.score %></td>
        <td><%= pomodoro.used_at %></td>
        <td><%= link_to 'Show', pomodoro %></td>
        <td><%= link_to 'Edit', edit_pomodoro_path(pomodoro) %></td>
        <td><%= link_to 'Destroy', pomodoro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Pomodoro', pomodoros_path, method: :post %>
